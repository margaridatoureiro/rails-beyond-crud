<p style="color: green"><%= notice %></p>

<%= render @restaurant %>

<h4>Reviews:</h4>
<% @restaurant.reviews.each do |review| %>
  <li><%= review.content %>( <%= link_to "Delete",
      review_path(review),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %>)</li>
<% end %>

<p><%= link_to "Add a new review", new_restaurant_review_path(@restaurant.id) %></p>

<%= link_to "Chef info", chef_restaurant_path(@restaurant.id) %>

<div>
  <%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant) %> |
  <%= link_to "Back to restaurants", restaurants_path %>

  <%= button_to "Destroy this restaurant", @restaurant, method: :delete %>
</div>
